@using SachOnlineLab01.Models;
@using PagedList.Mvc;

@model PagedList.PagedList<SACH>

@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

﻿

<h2 class="text-center"> SÁCH THEO CHỦ ĐỀ</h2>
<hr>
<div class="row text-center">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/@sach.AnhBia" alt="@sach.TenSach" class="img-responsive img-rounded imgbook">
                <div class="caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("ChiTietSach","Home", new { id = sach.MaSach})"> @sach.TenSach</a>
                    </h4>
                </div>
                <p>

                    <a href="@Url.Action("ThemGioHang", "GioHang", new {ms = sach.MaSach, url= @Request.Url.ToString()})" class="btn btn-primary" role="button">
                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                        Add to Cart
                    </a>
                </p>
            </div>
        </div>
    }
</div>


<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("SachTheoChuDe", new {id=ViewBag.MaCD, page=page}))
</div>

<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>