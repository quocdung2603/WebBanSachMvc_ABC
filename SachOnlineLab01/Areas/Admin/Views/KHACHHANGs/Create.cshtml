@model SachOnlineLab01.Models.KHACHHANG

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM KHÁCH HÀNG</h2>

@using (Html.BeginForm("Create", "KHACHHANGs", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên khách hàng:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenKH" />
            @ViewBag.ThongBao
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Số điện thoại:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sSoDienThoai" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tên đăng nhập:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenDN" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sMatKhau" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày sinh:</label>
        <div class="col-md-10">
            <input type="date" size="70" name="sNgaySinh" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sEmail" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ KHÁCH HÀNG", "Index")
</div>
