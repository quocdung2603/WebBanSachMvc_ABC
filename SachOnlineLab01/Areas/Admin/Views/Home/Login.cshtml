
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Simple Login Form</title>
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/structure.css" rel="stylesheet" />
    @Styles.Render("~/Content/Admin/css")
</head>

<body>
    <form class="box login" action="~/Admin/Home/Login" method="post">
        <fieldset class="boxBody">
            <h4 style="text-align:center; font-weight:bold;">LOGIN ADMIN</h4>
            <label>Username</label>
            <input type="text" tabindex="1" required name="Username" placeholder="Type your username"/>
            <label><a href="#" class="rLink" tabindex="5">Forget your password?</a>Password</label>
            <input type="password" tabindex="2" name="Password" required placeholder="Type your password">
            <p style="font-style:italic; color:red; margin:0px;">@ViewBag.ThongBao</p>
        </fieldset>
        <footer>
            <label><input type="checkbox" tabindex="3">Keep me logged in</label>
            <input type="submit" class="btnLogin" value="Login" tabindex="4">
        </footer>
    </form>
    <footer id="main">
        <a href="http://wwww.cssjunction.com">Simple Login Form (HTML5/CSS3 Coded) by CSS Junction</a> | <a href="http://www.premiumpixels.com">PSD by Premium Pixels</a>
    </footer>


</body>
</html>
