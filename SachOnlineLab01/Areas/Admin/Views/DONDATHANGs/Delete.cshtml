@model SachOnlineLab01.Models.DONDATHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn có quyết định xóa quyển sách này?</h3>
<h4 class="text-danger">@Html.Raw(ViewBag.ThongBao)</h4>
<div style="margin-bottom: 10px;">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Trạng thái thanh toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaThanhToan)
        </dd>

        <dt>
            Trạng thái giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrangGiaoHang)
        </dd>

        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayDat, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayGiao, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Họ tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHACHHANG.HoTen)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
        </div>
    }
</div>
