@model SachOnlineLab01.Models.DONDATHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h2>Chia tiết đơn hàng</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Trạng thái thanh toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaThanhToan)
        </dd>

        <dt>
            Trạng thái giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrangGiaoHang)
        </dd>

        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayDat, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayGiao, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Họ tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHACHHANG.HoTen)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa đơn hàng", "Edit", new { id = Model.MaDonHang }) |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
</p>
